<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="by.tataranovich.leasingcompany.dao.ICarDAO">

	<insert id="add" useGeneratedKeys="true" keyProperty="id">
		<![CDATA[
			INSERT INTO cars (price, car_model_id, car_provider_id)
			VALUES (
				#{price},
				#{car_model_id}
				#{car_provider_id}
			)
		]]>
	</insert>

	<sql id="getCarProvider">
		<![CDATA[
			SELECT
			    cp.id AS car_provider_id,
				cp.name AS car_provider_name,
				cp.phone AS car_provider_phone,
				FROM car_providers cp   
		]]>
		
	</sql>

	<select id="getById" parameterType="java.lang.Long" resultMap="CarProvider">
		<include refid="getCarProvider" />
		<![CDATA[
			WHERE cp.id = #{id};
		]]>
	</select>
	
	<select id="getAll" resultMap="CarProvider">
		<include refid="getCarProvider" />
	</select>

	<update id="update">
		<![CDATA[
        	UPDATE
        		car_providers
          	SET
          		name = #{name},
				phone = #{phone}
          	WHERE
			 	ID = #{id}
        ]]>
	</update>
	
	 <delete id="delete">
        <![CDATA[
        	DELETE
          	FROM 
          		addresses
          	WHERE
          		id = #{id}
        ]]>
    </delete>
	
	<resultMap type="package by.tataranovich.leasingcompany.model.ICarProvider" id="CarProvider" autoMapping="false">
		<id column="car_provider_id" property="id" />
		<result column="car_provider_name" property="name" />
		<result column="car_provider_phone" property="phone" />
		</resultMap>

</mapper>
